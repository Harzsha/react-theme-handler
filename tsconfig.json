{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "jsx": "react-jsx",
      "declaration": true,
      "declarationDir": "dist/types",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "dist",
      "lib": ["dom", "dom.iterable", "esnext"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }